<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jake.coffee.MainActivity"
    android:layout_width="450dp"
    android:background="#776355">

    <ImageView
        app:srcCompat="@drawable/coffeebeanlogo"
        android:id="@+id/MainLogoID"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/LoginID"
        android:layout_alignBottom="@+id/InstagramID" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoginID"
        android:background="#09944c"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/instagram"
        android:id="@+id/InstagramID"
        android:layout_weight="1"
        android:layout_marginTop="83dp"
        android:layout_alignTop="@+id/FacebookID"
        android:layout_alignStart="@+id/FacebookID" />

    <Button
        android:text="SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SignUpID"
        android:background="#09944c"
        android:layout_alignBottom="@+id/MainLogoID"
        android:layout_toEndOf="@+id/MainLogoID" />

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@drawable/facebook"
        android:id="@+id/FacebookID"
        android:layout_width="50dp"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/LoginID" />

    <ImageButton
        app:srcCompat="@drawable/harvest"
        android:id="@+id/HarvestID"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginEnd="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/InstagramID" />

    <TextView
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/QuoteID"
        android:text='"I would rather suffer with coffee than be senseless." - Napoleon Bonaparte '
        android:textColorLink="?android:attr/colorPressedHighlight"
        android:textColor="@android:color/holo_orange_light"
        tools:textStyle="italic"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/SignUpID" />
</RelativeLayout>

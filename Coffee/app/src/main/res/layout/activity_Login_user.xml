<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_login_user"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jake.coffee.LoginUser"
    android:background="@drawable/coffee_background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/PasswordID"
        android:text="Password"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:layout_above="@+id/LoginBtnID"
        android:layout_alignStart="@+id/EmailId"
        android:layout_marginBottom="49dp"
        android:textSize="26sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailId"
        android:text="Email"
        android:textColor="?android:attr/colorFocusedHighlight"
        android:layout_above="@+id/PasswordID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textSize="26sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/coffeebeanlogo"
        android:id="@+id/LoginLogoID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LoginBtnID"
        android:layout_marginBottom="83dp"
        android:background="#09944c"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/PasswordID" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterBtnID"
        android:layout_below="@+id/PasswordID"
        android:layout_alignEnd="@+id/PasswordID"
        android:layout_marginEnd="10dp" />
</RelativeLayout>